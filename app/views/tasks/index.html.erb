<h1>These are the tasks:</h1>
<p>
  <ul style="list-style: none">
    <% @tasks.each do |task| %>
    <li >
      <% if task.completed %>
        <i class="fas fa-check-square"> </i>
      <% else %>
        <i class="far fa-square"> </i>
      <% end %>
        <%=  link_to "#{task.title}", task_path(task.id) %>

        <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, task_path(task.id), method: :delete,  data: { confirm: 'Are you sure' } %>
    <% end %>
    </li>
  </ul>
</p>
<p>
 <%= link_to "Create a new task", tasks_new_path  %>
</p>


